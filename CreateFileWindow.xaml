<Window x:Class="lab2_WPF_app.CreateFileWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:lab2_WPF_app"
        mc:Ignorable="d"
        Title="CreateFileWindow" Height="450" Width="400">
    
    <Grid RenderTransformOrigin="0.500,0.500">
        <Label>Name</Label>
        <TextBox x:Name="CreateFileWindowName"/>
        <RadioButton x:Name="radioFile">File</RadioButton>
        <RadioButton x:Name="radioDirectory">Directory</RadioButton>
        <CheckBox x:Name="checkBoxR">ReadOnly</CheckBox>
        <CheckBox x:Name="checkBoxA">Archive</CheckBox>
        <CheckBox x:Name="checkBoxH">Hidden</CheckBox>
        <CheckBox x:Name="checkBoxS">System</CheckBox>
        <Button x:Name="okButton" Click="OK_Button">OK</Button>
        <Button x:Name="cancelButton" Click="Cancel_Button">Cancel</Button>
    </Grid>
</Window>
