<Window x:Class="lab2_WPF_app.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:lab2_WPF_app"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="67*"/>
            <ColumnDefinition Width="733*"/>
        </Grid.ColumnDefinitions>
        <ToolBar Height="40" Width="300" Margin="0,5,500,389" Grid.ColumnSpan="2">
            <Menu Width="78">
                <MenuItem Header="File" VerticalAlignment="Center" Height="30">
                    <MenuItem Header="Open" Click="Open"></MenuItem>
                    <MenuItem Header="Close" Click="Close"></MenuItem>
                </MenuItem>
            </Menu>
        </ToolBar>
        <TreeView x:Name="treeView" Margin="142,0,0,0" Grid.Column="1"/>

        <StatusBar Margin="0,403,591,0" Grid.ColumnSpan="2">
            <TextBlock Name="status" Width="90"/>
        </StatusBar>

    </Grid>
</Window>
